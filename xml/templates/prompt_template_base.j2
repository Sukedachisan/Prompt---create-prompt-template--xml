<prompt>
{%- filter indent %}

{#- system prompt #}
<section type='system_prompt'>
{%- filter indent %}
{%- if not role == '' and role %}
{% include 'includes/role.j2' %}
{%- endif %}
{%- if not task_type == '' and task_type %}
{% include 'includes/purpose.j2' %}
{%- endif %}
<instructions>
{%- filter indent %}
{%- block system_instructions %}
{% include 'includes/instructions/system/common.j2' %}
{%- endblock %}
{%- endfilter %}
</instructions>
{%- if not overview == '' and overview %}
{% include 'includes/overview.j2' %}
{%- endif %}
{%- endfilter %}
</section>

{#- user prompt #}
<section type='user_prompt'>
{%- filter indent %}
<instructions>
{%- filter indent %}
{%- block user_instructions %}
{%- endblock %}
{%- endfilter %}
</instructions>
{%- endfilter %}
</section>

{%- endfilter %}
</prompt>

{# system prompt #}
<prompt type="system">
{%- if not role == '' and role %}
{%- filter indent %}
    {% include 'includes/role.j2' %}
{%- endfilter %}
{%- endif %}
{%- if not task_type == '' and task_type %}
{%- filter indent %}
{% include 'includes/purpose.j2' %}
{%- endfilter %}
{%- endif %}
    <section type="instructions">
    {%- block system_instructions %}
        {%- include 'includes/base_instruction.j2' %}
    {%- endblock %}
    </section>
</prompt>

{# user prompt #}
<prompt type="user">
    <section type="instructions">
        {%- block user_instructions %}
        {%- endblock %}
    </section>
</prompt>

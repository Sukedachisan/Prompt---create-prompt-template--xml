<prompt>
{%- filter indent %}

{#- system prompt #}
<section type='system_prompt'>
{%- filter indent %}
{%- if role and not role == '' %}
{% include 'includes/role.j2' %}
{%- endif %}
{%- if task_type and not task_type == '' %}
{% include 'includes/purpose.j2' %}
{%- endif %}
<instructions>
{%- filter indent %}
{%- block system_instructions %}
{% include 'includes/instructions/system/common.j2' %}
{%- endblock %}
{%- endfilter %}
</instructions>
{%- if overview and not overview == '' %}
{% include 'includes/overview.j2' %}
{%- endif %}
{%- endfilter %}
</section>

{#- user prompt #}
<section type='user_prompt'>
{%- filter indent %}
<instructions>
{%- filter indent %}
{%- block user_instructions %}
{%- endblock %}
{%- endfilter %}
</instructions>
{%- if options and not options == [] %}
{% include 'includes/options.j2' %}
{%- endif %}
{%- endfilter %}
</section>

{%- endfilter %}
</prompt>
